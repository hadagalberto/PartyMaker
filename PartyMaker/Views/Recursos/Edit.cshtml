@model PartyMaker.Models.Recurso

@{
    ViewData["Title"] = "Alterar recurso";
}
<br/>
<h2>Alterar Recurso</h2>
<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRecurso" />
            <div class="form-group">
                <label asp-for="NomeRecurso" class="control-label"></label>
                <input asp-for="NomeRecurso" class="form-control" />
                <span asp-validation-for="NomeRecurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoRecurso" class="control-label"></label>
                <input asp-for="TipoRecurso" class="form-control" />
                <span asp-validation-for="TipoRecurso" class="text-danger"></span>
            </div>  
            <br/>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
