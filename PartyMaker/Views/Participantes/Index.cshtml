@model IEnumerable<PartyMaker.Models.Participante>

@{
    ViewData["Title"] = "Participantes";
}

<h2>Participantes</h2>
<h5>Evento: @ViewBag.EventoNome</h5>

<p>
    <a asp-action="Create" asp-route-Id="@ViewBag.EventoId">Criar Novo</a>
</p>
<table class="table dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdParticipante">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdParticipante">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdParticipante">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
