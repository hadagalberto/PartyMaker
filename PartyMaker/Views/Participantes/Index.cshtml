@model IEnumerable<PartyMaker.Models.Participante>

@{
    ViewData["Title"] = "Participantes";
}
 <br/>
<h2>Participantes de @ViewBag.EventoNome</h2>
<br/>
<p>
    <a asp-action="Create" asp-route-Id="@ViewBag.EventoId" class="btn btn-secondary  ">Adicionar</a>
</p>
<table class="table dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdParticipante">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdParticipante">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdParticipante">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
