@model PartyMaker.Models.Evento

@{
    ViewData["Title"] = "Criar novo evento";
}

<br/>
<h2>Novo Evento</h2>
<br/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEvento" class="control-label"></label>
                <input asp-for="DataEvento" type="text" class="form-control datetimepicker datetimepicker-input" data-toggle="datetimepicker" data-target="#DataEvento"/>
                <span asp-validation-for="DataEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemNome" class="control-label"></label>
                <input asp-for="ImagemNome" type="file" class="form-control" />
                <span asp-validation-for="ImagemNome" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Criar evento" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
