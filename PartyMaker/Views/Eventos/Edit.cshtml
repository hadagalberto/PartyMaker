@model PartyMaker.Models.Evento

@{
    ViewData["Title"] = "Alterar Evento";
}

<br/>
<h2>Editar Evento</h2>

<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEvento" value="@Model.IdEvento"/>
            <input type="hidden" asp-for="ImagemNome" value="@Model.ImagemNome"/>
            <input type="hidden" asp-for="ImagemLocal" value="@Model.ImagemLocal"/>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEvento" class="control-label"></label>
                <input asp-for="DataEvento" type="text" class="form-control datetimepicker datetimepicker-input" data-toggle="datetimepicker" data-target="#DataEvento" />
                <span asp-validation-for="DataEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Upload" class="control-label">Imagem do Evento</label>
                <input name="Upload" id="Upload" type="file" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImagemLocal))
                {
                    <br/>
                    <img src="\@Model.ImagemLocal" width="300"/>
                }
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
