@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Definir senha";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Defina sua senha</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    Você não possui um login próprio para este site. Crie uma conta própria
    para que você possa entrar sem utilização de login externo.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Definir senha</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
